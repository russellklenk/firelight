package com.ninjabird.firelight.input
{
    /**
     * Defines constants for all button ID code values.
     */
    public final class ButtonCode
    {
        /**
         * The left mouse button. This button is exposed by all Flash-based technologies (Flash Player, Flex and AIR).
         */
        public static const LEFT_BUTTON:uint   = 0;

        /**
         * The right mouse button. This button is exposed only to Flex and AIR applications.
         */
        public static const RIGHT_BUTTON:uint  = 1;

        /**
         * The middle mouse button. This button is exposed only to Flex and AIR applications.
         */
        public static const MIDDLE_BUTTON:uint = 2;
    }
}
